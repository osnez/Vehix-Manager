<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mantenimientos</title>
  <link rel="shortcut icon" href="/img/mobile-logo.png">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'> <!-- BOX ICONS -->
  <link rel="stylesheet" href="/css/tables.css">
</head>

<body>

  <% 
  // FunciÃ³n para formatear la fecha en formato 'dd/MM/yyyy'
  function formatDate(dateString) {
    const options = { day: '2-digit', month: '2-digit', year: 'numeric' };
    const date = new Date(dateString);
    return date.toLocaleDateString('es-ES', options);
  }
%>
  
  <header>
    <a href="/admin/detalle/<%= id %>">
      <img src="/img/mobile-logo.png" alt="" />
    </a>
    <a href="/admin/registrar-mantenimiento/<%= id %>" class="cssbuttons-io-button">
      <i class="bx bx-plus-circle"></i>
      <span>Nuevo</span>
    </a>
  </header>
  
  <main class="container">
    <section class="card-container">
      <h1>Registro de mantenimientos</h1>

      <% if (maintenances.length > 0) { %>
        <% maintenances.forEach(item => { %>
      <div class="card">
        <div class="image-container">
          <img src="/img/mobile-logo.png" alt="" class="logo">
          <img src="<%= item.foto_unidad %>" alt="Foto" class="image">
          <h1></h1>
        </div>
        <div class="info-container">
          <div class="info">
            <h1>No. Mantenimiento: <%= item.idMantenimiento %></h1>
            <h1>Placa: <%= item.placa %></h1>
            <h1>Fecha: <%= formatDate(item.fecha) %></h1>
            <h1>Destino: <%= item.destino %></h1>
          </div>
          <div class="buttons">
            <h1>COSTO: $<%= item.costo %></h1>
          </div>
        </div>
      </div>
      <% }); %>
      <% } else { %>
        <p>No hay mantenimientos registrados.</p>
      <% } %>
    </section>
  </main>
</body>

</html>